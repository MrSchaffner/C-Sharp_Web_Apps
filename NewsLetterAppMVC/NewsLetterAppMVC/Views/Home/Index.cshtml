@{
    ViewBag.Title = "Home Page";
}

<div class="row no-gutters m-3">
    <div class=" card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">sign up for newsletter</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
            {
                <div class="row no-gutters">
                    <div class="form-group col-md-12">
                        <input name="FirstName" type="text" class="form-control" placeholder="First" />
                    </div>
                    <div class="form-group col-md-12">
                        <input name="LastName" type="text" class="form-control" placeholder="Last"/>
                    </div>
                    <div class="form-group col-md-12">
                        <input name="Email" type="text" class="form-control" placeholder="Email"/>
                    </div>
                    <button type="submit" class="btn btn-block btn-primary">SUBMIT!</button>
                </div>
            }
        </div>
    </div>
</div>